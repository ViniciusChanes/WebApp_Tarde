@model WebApp_Tarde.Models.NovoProdutoViewModel

<div class="card">
    <div class="card-header">
        <h2>Cadastrar produtos</h2>
    </div>
    
    <div class="card-body">
        <form action="/Produtos/SalvarDados" method="post">

            <div class="form-group">
                <label>Nome do produto</label>
                <input name="Descricao" type="text" class="form-control" />
            </div>

            <div class="form-group">
                <label>Valor</label>
                <input name="Valor" type="text" class="form-control" />
            </div>

            <div class="form-group">
                <label>Ativo</label>
                <select name="Ativo" class="form-control">
                    <option value="true">Ativo</option>
                    <option value="false">Desativado</option>
                </select>
            </div>

            <div class="form-group" style="margin-bottom: 2%;">
                <label>Categoria</label>
                <select name="CategoriaId" class="form-control">
                    @foreach (var categoria in Model.Lista_Categorias)
                    {
                        <option value="@categoria.Id">@categoria.Nome</option>
                    }
                </select>
            </div>

            <button class="btn btn-success" type="submit">
                Salvar Produto
            </button>

        </form>
    </div>
    
</div>
